<div class="span3 well">
      <legend>New to nelisaApp? Sign up!</legend>
    <form accept-charset="UTF-8" action="/signUp/add" method="post">
		<input class="span3" name="username" placeholder="Username" value="{{username}}" type="text">
        <input class="span3" name="email" placeholder="Email" value="{{email}}" type="email">
        <input class="span3" name="password" placeholder="Password" value="{{password}}" type="password">
        <button class="btn btn-warning" type="submit">Sign up for nelisaApp</button>
    </form>
</div>
