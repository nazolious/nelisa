<h1>CATEGORY</h1>
    <button type="button" class="btn btn-warning"><a href="/categories/add">ADD</a></button>
    <a></a>
        <div class="container">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>CATEGORY</th>
                        {{#if user.is_admin}}
                            <th>EDIT</th>
                            <th>DELETE</th>
                            {{else}}
                            <th></th>
                            {{/if}}
                    </tr>
                </thead>
                <tbody>
                    {{#categories}}
                        <tr>
                            <td>{{category}}</td>
                            {{#if ../user.is_admin}}
                            <td><button type="button" class="btn btn-warning"><a href="/categories/edit/{{id}}">EDIT</a></button></td>
                            <td><button type="button" class="btn btn-danger"><a href="/categories/delete/{{id}}">DELETE</a></button></td>

                            <!-- <td></td> -->
                            {{else}}
                            <td></td>
                            {{/if}}
                        </tr>
                    {{/categories}}
                </tbody>
            </table>
        </div>

