<h1>CATEGORY</h1>
{{# if user.is_admin}}
    <a href="/categories/add">Add</a>
    {{else}}
        <a></a>
        {{/if}}
        <div class="container">

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>category</th>
                        {{# if user.is_admin}}
                            <th>Edit</th>
                            <th>delete</th>
                            {{else}}
                                <td></td>
                                {{/if}}
                    </tr>
                </thead>
                <tbody>
                    {{#categories}}
                        <tr>
                            <td>{{category}}</td>
                            {{# if user.is_admin}}
                                <td><a href="/categories/edit/{{id}}">Edit</a></td>
                                <td><a href="/categories/delete/{{id}}">Delete</a></td>
                                {{else}}
                                    <td></td>
                                    {{/if}}
                        </tr>
                    {{/categories}}
                </tbody>
            </table>
        </div>

